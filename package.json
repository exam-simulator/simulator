{
  "name": "exam-simulator",
  "version": "1.0.0-alpha",
  "description": "A JSON based, open source, exam simulator built with electron.",
  "main": "index.js",
  "keywords": [
    "exam",
    "simulator"
  ],
  "author": {
    "name": "benjaminadk",
    "email": "jsonexamsimulator@gmail.com",
    "url": "https://github.com/exam-simulator"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/exam-simulator/simulator.git"
  },
  "homepage": "https://github.com/exam-simulator/simulator",
  "license": "ISC",
  "scripts": {
    "dev": "electron-webpack dev",
    "prod": "electron ./dist/main/main.js",
    "compile": "electron-webpack",
    "release": "electron-builder -p always"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-plugin-styled-components": "^1.10.0",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "electron-webpack": "^2.6.2",
    "webpack": "^4.29.6"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "axios": "^0.18.0",
    "date-fns": "^2.0.0-alpha.27",
    "electron-devtools-installer": "^2.2.4",
    "immutability-helper": "^3.0.0",
    "lodash.isequal": "^4.5.0",
    "polished": "^3.0.3",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dnd": "^7.1.0",
    "react-dnd-html5-backend": "^7.1.0",
    "react-dom": "^16.8.3",
    "source-map-support": "^0.5.10",
    "styled-components": "^4.1.3",
    "styled-icons": "^7.4.0"
  },
  "build": {
    "appId": "Benjaminadk.ExamSimulator",
    "productName": "Exam Simulator",
    "copyright": "Copyright Â© 2019 Benjaminadk",
    "win": {
      "icon": "static/icon.ico",
      "publish": {
        "provider": "github",
        "owner": "exam-simulator"
      },
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "static/icon.icns",
      "publish": {
        "provider": "github",
        "owner": "exam-simulator"
      },
      "target": [
        "dmg"
      ]
    },
    "directories": {
      "output": "release"
    }
  }
}
